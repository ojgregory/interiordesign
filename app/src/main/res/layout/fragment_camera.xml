<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".Fragments.CameraFragment">

    <SurfaceView
        android:id="@+id/previewSurfaceView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="4"/>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >

    <Spinner
        android:id="@+id/preprocesserSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/preprocessors"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toEndOf="@id/processorSpinner"
        app:layout_constraintLeft_toRightOf="@id/previewSurfaceView"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/processorSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/processors"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/previewSurfaceView" />

    <Spinner
        android:id="@+id/gaussianSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/maskSizes"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/processorSpinner" />

    <EditText
        android:id="@+id/gaussianSigmaEditText"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:entries="@array/maskSizes"
        android:inputType="number|numberDecimal"
        android:text="10.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gaussianSpinner"
        tools:text="10.0" />

    <Button
        android:id="@+id/gaussianButton"
        android:layout_width="113dp"
        android:layout_height="69dp"
        android:text="@string/GaussianButton"
        app:layout_constraintStart_toEndOf="@id/gaussianSigmaEditText"
        app:layout_constraintTop_toBottomOf="@id/processorSpinner"
        tools:text="@string/GaussianButton" />
    </LinearLayout>

</LinearLayout>